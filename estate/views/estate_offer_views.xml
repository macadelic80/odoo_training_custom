<?xml version="1.0"?>
<odoo>
  <record id="estate_offer_views" model="ir.actions.act_window">
    <field name="name">Properties offers</field>
    <field name="res_model">estate.property.offer</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="estate_offer_tree" model="ir.ui.view">
    <field name="name">estate.property.offer.view.tree</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <tree string="Channel">
        <field name="price"/>
        <field name="partner_id"/>
        <field name="validity"/>
        <field name="date_deadline"/>
        <button name="action_accept" type="object" icon="fa-check"/>
        <button name="action_refuse" type="object" icon="fa-times"/>
        <field name="status"/>
      </tree>
    </field>
  </record>
</odoo>